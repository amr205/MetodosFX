<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.controller.methods.RegresionLinealInputController"
      fx:id="mainPane">

    <VBox spacing="15" maxWidth="550">
        <padding>
            <Insets topRightBottomLeft="10"></Insets>
        </padding>
        <TableView prefWidth="550" fx:id="dataTable" editable="true" >
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn text="x" >
                    <cellValueFactory>
                        <PropertyValueFactory property="x" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="y" >
                    <cellValueFactory>
                        <PropertyValueFactory property="x" />
                    </cellValueFactory>
                </TableColumn>
            </columns>

        </TableView>

        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Button text="-" onMouseClicked="#removeRow"/>
            <Button text="+" onMouseClicked="#addRow"/>
            <Button text="Obtener ecuaciÃ³n" onMouseClicked="#getEquation"/>
        </HBox>
        <Separator/>
        <HBox spacing="15">
            <Label text="Evaluar funcion x= "/>
            <TextField HBox.hgrow="ALWAYS" fx:id="xValue"/>
        </HBox>
        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Button text="Evaluar" onMouseClicked="#evaluate"/>
        </HBox>
    </VBox>

</VBox>

